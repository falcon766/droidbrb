{
  "name": "droidbrb",
  "version": "1.0.0",
  "description": "Peer-to-peer platform connecting robotics enthusiasts to share, rent, and collaborate around robotic devices",
  "main": "index.js",
  "scripts": {
    "dev": "cd client && npm start",
    "build": "cd client && npm run build",
    "start": "cd client && npm start",
    "install:all": "npm install && cd client && npm install",
    "firebase:serve": "cd client && npm run firebase:serve",
    "firebase:deploy": "cd client && npm run firebase:deploy",
    "netlify:deploy": "cd client && npm run netlify:deploy"
  },
  "keywords": ["robotics", "marketplace", "community", "rental", "peer-to-peer", "firebase", "netlify"],
  "author": "DroidBRB Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
} 