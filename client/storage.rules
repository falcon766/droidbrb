rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Users can upload their own avatar
    match /avatars/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Robot owners can upload robot images
    match /robots/{robotId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Community avatars
    match /communities/{communityId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // General file uploads (with size and type restrictions)
    match /uploads/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && 
        request.auth.uid == userId &&
        request.resource.size < 10 * 1024 * 1024 && // 10MB limit
        request.resource.contentType.matches('image/.*|video/.*|application/pdf');
    }
  }
} 